FROM openjdk:21-jdk-slim

WORKDIR /app

# Install development tools and Python for AI/ML dependencies
RUN apt-get update && apt-get install -y \
    curl \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies for AI/ML
RUN pip3 install --no-cache-dir \
    torch \
    torchvision \
    transformers \
    numpy \
    pillow

# Add non-root user
RUN useradd -ms /bin/bash automed
USER automed

# Copy gradle files
COPY build.gradle.kts settings.gradle.kts gradlew ./
COPY gradle gradle

# Download dependencies
RUN ./gradlew dependencies --no-daemon

# Copy source code
COPY src src

# Create models directory
RUN mkdir -p models

# Expose ports
EXPOSE 8086

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --retries=5 CMD curl -f http://localhost:8086/actuator/health || exit 1

# JVM memory settings for AI workloads
ENV JAVA_OPTS="-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200"

# Development command with hot reload
CMD ["./gradlew", "bootRun", "--no-daemon", "--continuous"]